/* pages/cart/cart.wxss */
.scroll{
  margin-bottom: 80rpx;
}
.bottom-bar{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  color: #666;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #eee;
  box-shadow: 0 -4rpx 6rpx rgba(0, 0, 0, .2);
}
.bottom-bar .left{
  display: inline-block;
}
.left .checkout{
  display: inline-block;
}
.left .total-price{
  margin-left: 20rpx;
  display: inline-block;
}
.bottom-bar .right{
  display: inline-block;
  float: right;
  background-color: orangered;
  width: 230rpx;
  text-align: center;
}
.right .buy-product{
  padding: 0 40rpx;
  color: white;
}


  /*购物车列表*/
.cart-list-item{
  display: flex;
  padding: 10rpx;
  color: #666;
  font-size: 44rpx;
}
.cart-list-item .cart-itemImg{
  display: flex;
  align-items: center;
}
.cart-itemImg .img{
  width: 250rpx;
  border-radius: 10rpx;
}
.cart-itemInfo{
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  justify-content: space-between;
  align-content: space-between;
  padding: 10rpx 20rpx;
  overflow: hidden;
}
.cart-itemInfo .item-title{
  font-size: 40rpx;
  font-weight: bold;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.cart-itemInfo .item-desc{
  font-size: 32rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.cart-itemInfo .item-price{
  color: orangered;
  display: inline-block;
}