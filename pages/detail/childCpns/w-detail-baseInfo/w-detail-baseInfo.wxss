/* pages/detail/childCpns/w-detail-baseInfo/w-detail-baseInfo.wxss */
.detail-baseInfo{
  margin-top: 30rpx;
  color: #999;
  padding: 0 16rpx;
  border-bottom: 10rpx solid #f2f5f8;
}
.detail-baseInfo .title-info{
  color: #222;
}
.price-info{
  margin-top: 20rpx;
  display: flex;
  align-items: baseline;
}
.price-info .n-price{
  font-size: 48rpx;
  color: #ff5777;
}
.price-info .o-price{
  font-size: 26rpx;
  margin-left: 10rpx;
  text-decoration: line-through;
}
.price-info .discount{
  background-color: #ff5777;
  border-radius: 16rpx;
  color: white;
  font-size: 24rpx;
  align-self: flex-start;
  padding: 6rpx 10rpx 4rpx 10rpx;
  margin-left: 10rpx;
}
.other-info{
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
  font-size: 26rpx;
  line-height: 60rpx;
  border-bottom: 2rpx solid rgba(100,100,100,.1);
}
.services{
  display: flex;
  justify-content: space-between;
  line-height: 120rpx;
  font-size: 26rpx;
  color: #333;
}
.services .img{
  width: 28rpx;
  height: 28rpx;
  vertical-align: sub;
  margin-right: 4rpx;
}