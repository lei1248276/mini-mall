/* pages/detail/childCpns/w-detail-commentInfo/w-detail-commentInfo.wxss */
.comment-info{
  padding: 10rpx 24rpx;
  border-bottom: 10rpx solid #f2f5f8;
  min-height: 500rpx;
}
.comment-info .comment-title{
  padding: 20rpx 0;
  border-bottom: 2rpx solid rgba(0,0,0,.1);
}
.comment-title .more{
  float: right;
}
.comment-info .comment-user{
  display: flex;
  align-items: center;
  padding: 20rpx 0 10rpx;
}
.comment-user .img{
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
}
.comment-user .uname{
  margin-left: 20rpx;
  color: #333;
}
.comment-userInfo{
  padding: 0 10rpx 30rpx;
}
.comment-userInfo .comment-content{
  color: #555;
  font-size: 28rpx;
}
.comment-userInfo .other-info{
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}
.other-info .date{
  margin-right: 20rpx;
}
.user-img .img{
  width: 140rpx;
  height: 140rpx;
  margin: 20rpx 20rpx 0 0 ;
}

.void{
  font-size: 48rpx;
  font-weight: bold;
  padding: 40rpx;
  text-align: center;
}
